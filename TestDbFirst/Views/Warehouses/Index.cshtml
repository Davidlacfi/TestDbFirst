@model IEnumerable<TestDbFirst.Warehouse>

@{
    ViewBag.Title = "Raktárak listája";
}

<h2>Raktárak listája</h2>

<p>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "Warehouses")'">
        Új raktár
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th>Műveletek</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remark)
        </td>
        <td>
            @Html.ActionLink("Szerkeszt", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Törlés", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
