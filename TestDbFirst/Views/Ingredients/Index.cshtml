@model IEnumerable<TestDbFirst.Ingredient>

@{
    ViewBag.Title = "Alapanyagok listája";
}

<h2>Alapanyagok listája</h2>

<p>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "Ingredients")'">
        Új alapanyag
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Műveletek</th>
    </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Szerkeszt", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Törlés", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

        </table>
